    CALL SP_FT_FIGL_LOAD_V001(:pPER1);
    
	--CALL SP_PTD_SALDOS_PARA_CONSOLIDACION(:Periodo_Int1);
	
	IF :pPER1<>:pPER2 THEN
		truncate table STG_0FI_GL_10;
