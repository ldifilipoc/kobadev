VIEW KPI_VALOREM AS
SELECT 	FC_PERIODO FECHA, 
		CD_CEBE CEBE, 
		CD_CUENTA CUENTA, 
		Sum(VL_KPI) VALOR,
		Sum(VL_CANTIDAD) CANTIDAD
FROM FT_KPI FT
INNER JOIN DIM_CUENTA CTA 
	ON FT.CD_DW_CUENTA = CTA.CD_DW_CUENTA
INNER JOIN DIM_CEBE_PRCTR CB 
	ON CB.CD_DW_CEBE = FT.CD_DW_CEBE
GROUP BY FC_PERIODO, CD_CEBE, CD_CUENTA;