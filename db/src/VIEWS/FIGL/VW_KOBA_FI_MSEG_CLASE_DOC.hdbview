VIEW "VW_KOBA_FI_MSEG_CLASE_DOC" AS 
SELECT '6A00' SOCIEDAD, CD_PERIODO PERIODO, C.CD_CUENTA CUENTA, C.NM_CUENTA CUENTA_T, D.CD_BLART CLASE_DOC/*, CD_RTCUR MONEDA*/, SUM("VL_HSL"*100) VALOR
FROM FT_FIGLITEM F
LEFT JOIN DIM_CUENTA C ON C.CD_DW_CUENTA = F.CD_DW_CUENTA
LEFT JOIN DIM_DOCFI D ON F.CD_DW_BELNR = D.CD_DW_BKPF
WHERE F.CD_DW_EMPRESA=28 AND SUBSTRING(C.CD_CUENTA,1,4)='1435' 
GROUP BY CD_PERIODO, C.CD_CUENTA, C.NM_CUENTA, D.CD_BLART/*, CD_RTCUR*/;