VIEW KOBA_BALANCE_VIEW  AS 
SELECT '6A00' SOCIEDAD, F.FE_FISCPER PERIODO, '0L' LEDGER, C.CD_CUENTA CUENTA, C.NM_CUENTA CUENTA_T, SUM(VL_BALANCE) SALDO_ACUMULADO
FROM  FT_FIGL F
INNER JOIN DIM_CUENTA C ON F.CD_DW_CUENTA = C.CD_DW_CUENTA
WHERE F.FE_FISCPER>'2020-01-01' --AND SUBSTRING(C.CD_CUENTA,1,4)='1435'
GROUP BY F.FE_FISCPER, C.CD_CUENTA, C.NM_CUENTA ORDER BY F.FE_FISCPER, C.CD_CUENTA, C.NM_CUENTA;