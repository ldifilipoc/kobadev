VIEW KOBA_SALES_BY_ITEM_DIFERENCIAS_VIEW AS 
SELECT FECHA, P.CD_CEBE, P.NM_CEBE, BELNR, INGRESO_FI, INGRESO_CO, ABS(INGRESO_FI-INGRESO_CO) DIF_INGRESO, IVA_FI, IVA_CO, ABS(IVA_FI+IVA_CO) DIF_IVA, 
	IMPOCONSUMO_FI,IMPOCONSUMO_CO,ABS(IMPOCONSUMO_FI+IMPOCONSUMO_CO) DIF_IMPOCONSUMO
FROM ETL_CONTROL_COEP D
LEFT JOIN DIM_CEBE_PRCTR P ON D.CD_DW_CEBE = P.CD_DW_CEBE;
