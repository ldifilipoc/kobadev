VIEW KOBA_VAT AS
SELECT CTA.CD_CUENTA, CB.CD_CEBE, VAT.FE_FISCPER, Sum(VL_TURNOVER) SALDO  
FROM FT_VAT VAT 
INNER JOIN DIM_CUENTA CTA 
	ON CTA.CD_DW_CUENTA = VAT.CD_DW_CUENTA 
INNER JOIN DIM_CEBE_PRCTR CB 
	ON CB.CD_DW_CEBE = VAT.CD_DW_CEBE 
GROUP BY CTA.CD_CUENTA, CB.CD_CEBE, VAT.FE_FISCPER