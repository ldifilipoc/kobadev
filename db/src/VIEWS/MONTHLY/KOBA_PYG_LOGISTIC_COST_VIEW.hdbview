VIEW KOBA_PYG_LOGISTIC_COST AS 
SELECT LAST_DAY(F.FE_FISCPER) AS CD_BUDAT, 'KPI0340' AS CD_CUENTA, 'KPI0340' AS CD_CONCEPTO, 'NA' AS CD_CEBE, CD_DIVISION AS ZONA_ID, CD_ACTIVIDAD AS ACTIVIDAD_ID, 
	SUM(VL_TURNOVER) AS VALOR
FROM FT_FIGL AS F 
INNER JOIN DIM_CEBE_PRCTR AS B ON F.CD_DW_CEBE = B.CD_DW_CEBE
INNER JOIN DIM_CUENTA AS C ON C.CD_DW_CUENTA = F.CD_DW_CUENTA
WHERE B.CD_JERARQUIA2 = 'LOGIST_TR' AND (C.CD_CLASE IN ('4', '5', '6')) AND CD_DW_EMPRESA = 28
GROUP BY LAST_DAY(F.FE_FISCPER), CD_DIVISION, CD_ACTIVIDAD;