VIEW KOBA_EXTRAORDINARIOS AS
select D.CD_BELNR,CC.CD_CECO, C.CD_CUENTA,C.NM_CUENTA, F.CD_PERIODO, CD_DW_BUZEI ITEM, F.FE_BUDAT FECHA, CD_DRCRK TIPO, VL_HSL*100 VALOR
from "FT_FIGLITEM" F
inner join DIM_CUENTA C ON C.CD_DW_CUENTA = F.CD_DW_CUENTA
inner join DIM_CECO CC ON CC.CD_DW_CECO = F.CD_DW_CECO
inner join DIM_DOCFI D ON D.CD_DW_BKPF = F.CD_DW_BELNR
and CC.CD_JERARQUIA3 = 'EXT_KOBA';
--WHERE F.CD_DW_EMPRESA = 28;