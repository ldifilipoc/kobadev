VIEW KOBA_CECO_VIEW AS 
SELECT C.CD_CECO AS CECO_ID, C.NM_CECO AS CECO, C.CD_DIVISION AS ZONA_ID, C.CD_CLASE_CECO AS CLASE, B.CD_ACTIVIDAD AS ACTIVIDAD_ID, C.CD_CEBE AS CEBE_ID, C.NM_RESPONSABLE AS RESPONSABLE, 
	   C.NM_DPTO AS DPTO, C.CD_JERARQUIA AS JERARQUIA_ID
FROM DIM_CECO AS C 
LEFT OUTER JOIN DIM_CEBE_PRCTR AS B ON C.CD_CEBE = B.CD_CEBE;