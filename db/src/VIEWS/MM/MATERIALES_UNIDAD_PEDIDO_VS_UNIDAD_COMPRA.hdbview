VIEW MATERIALES_UNIDAD_PEDIDO_VS_UNIDAD_COMPRA AS 
SELECT MAT.CD_MATERIAL_INT, MAT.TX_MATERIAL, MAT.CD_UNITPED, FT.CD_BPRME
FROM FT_COMPRAS FT 
INNER JOIN DIM_MATERIAL MAT 
	ON MAT.CD_DW_MATERIAL = FT.CD_DW_MATERIAL
WHERE FT.CD_EJERCICIO >= 2021
AND NOT (CD_BPRME=MAT.CD_UNITPED)
GROUP BY MAT.CD_MATERIAL_INT, MAT.CD_UNITPED, MAT.TX_MATERIAL, FT.CD_BPRME;
