VIEW KOBA_INVENTARIO_PRODUCTO AS 
SELECT MAT."TX_GRUPOMATERIAL" GRUPO_MATERIAL, MAT.CD_MATERIAL_INT COD_MATERIAL, 
MAT.TX_MATERIAL MATERIAL, MAT."TX_MARCA" MARCA, MAT."CD_UNITVOL" UNIDAD, 
SUM(MD."NU_LABST") CANTIDAD
FROM FT_MARD MD
LEFT JOIN DIM_MATERIAL MAT ON MAT.CD_DW_MATERIAL = MD.CD_DW_MATERIAL
WHERE MAT.CD_TMATERIAL='ZHAK'
GROUP BY MAT.CD_MATERIAL_INT, MAT.TX_MATERIAL, MAT."TX_GRUPOMATERIAL", MAT."TX_MARCA", 
MAT."CD_UNITVOL"
HAVING SUM(MD."NU_LABST")>0 ORDER BY MAT.CD_MATERIAL_INT;