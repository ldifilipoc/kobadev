VIEW KOBA_CONSOLIDADO_DOC_COMPENSADO_VIEW AS 
SELECT '6A00' BUKRS, CD_EJERCICIO GJAHR, CD_AUGBL AUGBL, CD_BUZEI BUZEI, FE_AUGDT AUGDT, CD_MONEDA WAERS, SUM(VL_WRBTR*100) WRBTR, FE_BUDAT BUDAT, DB.CD_BP COD_PROVEEDOR, 
	   DB.NM_BP PROVEEDOR, DB.TX_NIT NIT_PROVEEDOR, CD_XBLNR XBLNR, SUM(VL_DMSHB*100) DMSHB
FROM FT_0FIAP4 FT
LEFT JOIN DIM_BPARTNER DB ON FT.CD_DW_LIFNR=DB.CD_DW_BP AND DB.CD_CLASE='P'
WHERE FL_STATUSPS='C' AND CD_BELNR=CD_AUGBL
GROUP BY "CD_EJERCICIO", "CD_AUGBL", "CD_BUZEI", "FE_AUGDT", "CD_MONEDA", "FE_BUDAT", DB.CD_BP, DB.NM_BP, DB.TX_NIT, CD_XBLNR;